{{>nav-no-login}}

{{>errors}}

{{#if name}}

  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <p>Usuario {{name}} registrado</p>

    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  
{{/if}}


<h1>REGISTER</h1>

<form action="/users/register" method="post">

<input type="text" name="name" value ="{{valores.name}}"  autocomplete="off" required placeholder="Nombre de Usuario">
<input type="email" name="email" value ="{{valores.email}}"  autocomplete="off" required placeholder="Correo">
<input type="password" name="password" required placeholder="Contraseña">
<input type="password" name="confirm_password" required placeholder="Repetir contraseña">

<button type="submit">ENVIAR</button>


</form>

