<div class="col-md-8 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">NOTA</h3>
    </div>
    <div class="card-body text-right">
      <form action="/notes/new-note" method="POST">
        <div class="mb-3">
          
          <input
            type="text"
            name="title"
            class="form-control"
            placeholder="TÍTULO"
            value="{{valores.title}}"
            
            autofocus
          />
        </div>
        <div class="mb-3">
          
          <textarea
            name="description"
            class="form-control"
            placeholder="DESCRIPCIÓN"
            
          >{{valores.description}}</textarea>
        </div>
        <button class="btn btn-primary w-100" type="submit">
          ENVIAR
        </button>
      </form>
    </div>
  </div>
</div>